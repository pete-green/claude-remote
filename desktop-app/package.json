{
  "name": "claude-remote-desktop",
  "version": "1.0.0",
  "description": "Desktop system tray app for Claude Code Remote",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --inspect"
  },
  "keywords": ["electron", "claude", "system-tray"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0",
    "ws": "^8.14.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.claude.remote",
    "productName": "Claude Remote",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ]
  }
}
